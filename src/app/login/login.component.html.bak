<div id="fixed-heder">
<div class="fixed-nav-bar">
    <nav class="navbar navbar-inverse">
        <div class="collapse navbar-collapse" id="myNavbar">
        <img src="./assets/images/nrg_logo.png"  class="logo-img" />
        </div>
    </nav>
</div>
</div>

    <div id="back-color">
 <form name="form" (ngSubmit)="f.form.valid && onClickSubmit()" #f="ngForm" novalidate> 
            <br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/>

        <div id="back-color">
        <br/><br/><br/><br/><br/>
             <div id="login-box">
                 <br/><br/>
                 <h2 id="text">Employment Sign In</h2>
                 <br/>
                 <div class="col-lg-2"></div>
                    <div>
                        <div class="col-lg-9">
                          <div class="row">
    
                                <div id="icon-box">
                                  <i class="fa fa-user-circle-o" aria-hidden="true" id="icon"></i>
                                </div> 
                             <!--   <input type="text" placeholder="Username" style="width: 285px;" 
                                name="currentusername" [(ngModel)]="model.currentusername" #currentusername="ngModel" required>
                                -->
                                <input type="text" placeholder="Username/Email" style="width: 285px;" name="currentusername" [(ngModel)]="model.currentusername" #currentusername="ngModel" required/>
                                <div *ngIf="f.submitted && !currentusername.valid" class="help-block">Username is required</div>

                           
                           </div>
                           <br/>
                           <div class="row">
                                <div id="icon-box">
                                        <i class="fa fa-lock" aria-hidden="true" id="icon2"></i>
                                </div> 
                                <input type="password" placeholder="Password" style="width: 285px;" name="currentpassword" name="currentpassword" [(ngModel)]="model.currentpassword" 
                                 required>
                                 <div *ngIf="f.submitted && !currentpassword.valid" class="help-block">Password is required</div>

                           </div> 
                        </div>
                    </div>
                 <div class="col-lg-1"></div>
    
                 <div class="form-group">
                        <div class="row" class="col-lg-6">
                            <br/>
                    <!--        <input type="submit" class="btn btn-primary" id="signin-button"> -->
                       <button [disabled]="loading"   class="btn btn-primary" id="signin-button">Sign In</button>
    
                            <img *ngIf="loading" src="data:image/gif;base64," />
                        </div>
                        <div class="row" class="col-lg-6" style="padding-left: 80px;">
                            <br/>
                            <div class="row">
                            <input type="checkbox" value="Remember me" />
                            <label for="Remember me" class="forgot">Remember me</label></div>
                            <a (click)="forgetPassword()" class="forgot">Forget Password ?</a>
                        </div>
                    </div>
         </div>
         </form>
         <br/><br/>
            <button (click)="colorchangedialog()">Customization</button>
            <br/><br/> <br/><br/>
     </div>

 <br/><br/>
         
            
<!-- Dialouge box -->
    <div class="modal" tabindex="-1" role="dialog"  [ngStyle]="{'display':colorchange}" >
        <div  role="document" id="signup-box">
            <div class="modal-content" id="box-content">
               <button id="color-1"></button>
               <button id="color-2"></button>
             </div>
         </div>
     </div>